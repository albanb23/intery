<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.albaburdallo.intery">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.intery.NoActionBar">
        <activity android:name=".task.CalendarViewActivity"></activity>
        <activity android:name=".wallet.ChartActivity" />
        <activity android:name=".wallet.WalletFormActivity" />
        <activity android:name=".task.CalendarActivity" />
        <activity android:name=".task.TaskFormActivity" />
        <activity android:name=".habit.HabitActivity" />
        <activity android:name=".task.TaskActivity" />
        <activity android:name=".wallet.WalletActivity" />
        <activity android:name=".SignInActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".util.notifications.AlarmReceiver"
            android:enabled="true"
            android:exported="false"></receiver>
        <receiver
            android:name=".util.notifications.SnoozeReceiver"
            android:enabled="true"
            android:exported="false"></receiver>
        <receiver
            android:name=".util.notifications.DoneReceiver"
            android:enabled="true"
            android:exported="false"></receiver>
    </application>

</manifest>